<%- include('layout_head'); -%>
<h1>Tag Detail: <%= tag.name %></h1>
<hr>
<h4>Activities in: <%= tag.name %></h4>
<ul>
  <% for (e of activities) { %>
    <li><a href="<%= e.url %>"><%= e.name %></a></li>
  <% } %>
</ul>
<hr>
<p><a href="<%= tag.url %>/update">Update</a></p>
<p><a class="link-danger link-underline-opacity-25 link-underline-opacity-100-hover" href="<%= tag.url %>/delete">Delete</a></p>
<%- include('layout_foot'); -%>
